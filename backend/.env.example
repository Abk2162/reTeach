# Supabase Configuration
SUPABASE_URL=key
SUPABASE_KEY=key

# Database Configuration (optional for direct SQL access)
DATABASE_URL=postgresql://user:password@host:port/database

# Anthropic Claude API
ANTHROPIC_API_KEY=key

# Application Settings
ENVIRONMENT=development
DEBUG=true
CACHE_DIR=.cache
CACHE_ENABLED=true

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Service Configuration (SendGrid recommended for production)
# For Gmail SMTP (development only - may be blocked by hosting providers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
BOT_EMAIL=example@gmail.com
BOT_PASSWORD=example_password

# For SendGrid (recommended for production)
SENDGRID_API_KEY=key
FROM_EMAIL=noreply@yourdomain.com

# Production CORS (set in Railway)
# CORS_ORIGINS=https://your-app.vercel.app,https://www.your-app.vercel.app
